<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefWidth="500.0" spacing="15.0" styleClass="vbox" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.saimao.jarpackager.PackagerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label styleClass="title-label" text="JAR to EXE/MSI Packager">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    
    <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
        <!-- Step 1: Basic Information -->
        <Tab text="Basic Information">
             <VBox maxHeight="1.7976931348623157E308" style="-fx-background-color: #1e1e1e;">
                 
                 <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                         <ColumnConstraints minWidth="150.0" />
                         <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                      <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1">
                          <TextField fx:id="jarFileField" HBox.hgrow="ALWAYS" />
                          <Button onAction="#browseJarFile" text="Browse..." />
                      </HBox>
                     
                     <Label styleClass="required" text="Input Directory:*" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                     <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                         <TextField fx:id="inputDirField" HBox.hgrow="ALWAYS" />
                         <Button onAction="#browseInputDir" text="Browse..." />
                     </HBox>
                     
                     <Label styleClass="required" text="Destination Directory:*" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                     <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                         <TextField fx:id="destDirField" HBox.hgrow="ALWAYS" />
                         <Button onAction="#browseDestDir" text="Browse..." />
                     </HBox>
                     
                     <Label styleClass="required" text="Application Name:*" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                     <TextField fx:id="appNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     
                     <Label styleClass="required" text="Main Class:*" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                     <TextField fx:id="mainClassField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     <TextField fx:id="appVersionField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                     
                     <Label text="App Version:" GridPane.rowIndex="6" />
                     
                     <Label styleClass="required" text="Main JAR File:*" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                      <TextField fx:id="mainJarField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                     
                     <Label text="Package Type:" GridPane.rowIndex="7" />
                     <ComboBox fx:id="packageTypeCombo" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                       <Label styleClass="required" text="Select JAR File:*" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
               <VBox.margin>
                  <Insets top="2.0" />
               </VBox.margin>
                 </GridPane>
             </VBox>
        </Tab>
        
        <!-- Step 2: Advanced Options -->
        <Tab text="Advanced Options">
             <VBox spacing="15.0" style="-fx-background-color: #1e1e1e;">
                 <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                         <ColumnConstraints minWidth="150.0" />
                         <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     
                     <Label text="Icon File:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                     <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                         <TextField fx:id="iconField" HBox.hgrow="ALWAYS" />
                         <Button onAction="#browseIcon" text="Browse..." />
                     </HBox>
                     
                     <Label text="Vendor:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                     <TextField fx:id="vendorField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     
                     <Label text="Copyright:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                     <TextField fx:id="copyrightField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     
                     <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                     <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     
                     <Label text="License File:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                     <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                         <TextField fx:id="licenseField" HBox.hgrow="ALWAYS" />
                         <Button onAction="#browseLicense" text="Browse..." />
                     </HBox>
                     
                     <Label text="Upgrade UUID:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                     <TextField fx:id="upgradeUuidField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                     
                     <Label text="Menu Group:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                     <TextField fx:id="menuGroupField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                     
                     <Label text="Java Options:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                     <TextField fx:id="javaOptionsField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                     
                     <Label text="Add Modules:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                     <TextField fx:id="addModulesField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                 </GridPane>
             </VBox>
        </Tab>
    </TabPane>
    
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#packageApp" style="-fx-font-weight: bold;" text="Package" />
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefWidth="500.0" spacing="15.0" styleClass="vbox" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.saimao.jarpackager.PackagerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label styleClass="title-label" text="JAR to EXE/MSI Packager">

    </Label>

    <StackPane fx:id="stepContainer">
        <!-- Step 1: Basic Information -->
        <VBox fx:id="step1" spacing="15.0">
            <Label styleClass="title-label" text="Step 1: Basic Information"/>

            <HBox alignment="CENTER_RIGHT">
                <Label maxWidth="1.7976931348623157E308"
                       text="Click &quot;Check JDK&quot; to know what JDK are you using" HBox.hgrow="ALWAYS"/>
                <Button onAction="#checkJdkInfo" text="Check JDK"/>
            </HBox>

            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints minWidth="150.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label styleClass="required" text="Select JAR File:*"/>
                <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1">
                    <TextField fx:id="jarFileField" HBox.hgrow="ALWAYS"/>
                    <Button onAction="#browseJarFile" text="Browse..."/>
                </HBox>

                <Label styleClass="required" text="Input Directory:*" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <TextField fx:id="inputDirField" HBox.hgrow="ALWAYS"/>
                    <Button onAction="#browseInputDir" text="Browse..."/>
                </HBox>

                <Label styleClass="required" text="Destination Directory:*" GridPane.columnIndex="0"
                       GridPane.rowIndex="2"/>
                <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <TextField fx:id="destDirField" HBox.hgrow="ALWAYS"/>
                    <Button onAction="#browseDestDir" text="Browse..."/>
                </HBox>

                <Label styleClass="required" text="ApplicationName:*" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="appNameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label styleClass="required" text="Main Class:*" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="mainClassField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label styleClass="required" text="Main JAR File:*" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="mainJarField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="App Version:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="appVersionField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="Package Type:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <ComboBox fx:id="packageTypeCombo" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <Region VBox.vgrow="ALWAYS"/>

            <HBox alignment="BOTTOM_RIGHT">
                <Button onAction="#showStep2" style="-fx-font-weight: bold;" text="Next &gt;&gt;"/>
            </HBox>
        </VBox>

        <!-- Step 2: Advanced Options -->
        <VBox fx:id="step2" spacing="15.0" visible="false">
            <Label styleClass="title-label" text="Step 2: Advanced Options"/>

            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints minWidth="150.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Icon File:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <TextField fx:id="iconField" HBox.hgrow="ALWAYS"/>
                    <Button onAction="#browseIcon" text="Browse..."/>
                </HBox>

                <Label text="Vendor:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="vendorField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Copyright:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="copyrightField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="License File:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <TextField fx:id="licenseField" HBox.hgrow="ALWAYS"/>
                    <Button onAction="#browseLicense" text="Browse..."/>
                </HBox>

                <Label text="AddModules:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="addModulesField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Module Path:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
                    <TextField fx:id="modulePathField" HBox.hgrow="ALWAYS"/>
                    <Button onAction="#browseModulePath" text="Browse..."/>
                </HBox>

                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <Region VBox.vgrow="ALWAYS"/>

            <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
                <Button onAction="#showStep1" style="-fx-font-weight: bold;" text="&lt;&lt; Back"/>
                <Button onAction="#showStep3" style="-fx-font-weight: bold;" text="Next &gt;&gt;"/>
            </HBox>
        </VBox>

        <!-- Step 3: Windows Specific Options -->
        <VBox fx:id="step3" spacing="15.0" visible="false">
            <Label styleClass="title-label" text="Step 3: Windows Specific Options"/>

            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints minWidth="150.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="UpgradeUUID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="upgradeUuidField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Menu Group:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="menuGroupField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <VBox spacing="10.0">
                <Label text="Java Options:"/>
                <VBox fx:id="javaOptionsContainer" spacing="5.0">
                    <HBox spacing="5.0">
                        <TextField fx:id="javaOptionsField" HBox.hgrow="ALWAYS"/>
                        <Button onAction="#addJavaOption" text="Add"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="10.0">
                <Label text="Windows Options:"/>
                <FlowPane hgap="20.0" vgap="10.0">
                    <CheckBox fx:id="winShortcutCheckBox" selected="true" text="--win-shortcut"/>
                    <CheckBox fx:id="winMenuCheckBox" selected="true" text="--win-menu"/>
                    <CheckBox fx:id="winDirChooserCheckBox" selected="true" text="--win-dir-chooser"/>
                </FlowPane>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
                <Button onAction="#showStep2" style="-fx-font-weight: bold;" text="&lt;&lt; Back"/>
                <Button onAction="#packageApp" style="-fx-font-weight: bold;" text="Package"/>
            </HBox>
        </VBox>
    </StackPane>
</VBox>